<?xml version="1.0" encoding="utf-8" ?>
<Bundle xmlns="http://hl7.org/fhir">
  <!--流水号（重发改变）-->
  <id value="HospitalizationInformation-example"/>
  <type value="message"/>
  <!--************************消息头****************************-->
  <entry>
    <resource>
      <MessageHeader xmlns="http://hl7.org/fhir">
       
         <!--1.1 消息ID（实例ID，重发不变）-->
        <id value="MessageID"/>
        <!--消息事件 1..1-->  
        <eventCoding>
          <!--事件的ValueSet地址-->
          <system value="http://fhir.scwjxx.cn/Sichuan/CodeSystem/bussiness-event-code"/>
          <!--事件版本 0..1-->
          <version value="V1.0"/>
          <!--事件代码 0..1 -->
          <code value="C09001"/>
          <!--事件名称 0..1 住院信息-->
          <display value="住院信息"/>
        </eventCoding>
         <!-- 0..* 消息目的地应用程序-->
        <destination> 
          <!-- 0..1 系统名称 -->
          <name value="[string]"/>
          <!-- 1..1 实际目的地址 -->
          <endpoint value="[url]"/>
          <!-- 0..1 接收单位 -->
         <receiver>
           <!-- 0..1 编号 -->
           <identifier>
             <system value="http://fhir.scwjxx.cn/Sichuan/NamingSystem/medical-organization-identification"/>
             <value value="机构编号"/>
           </identifier>
           <display value="机构名称"/>
         </receiver>
       </destination>       
        <!-- 0..1 发送单位 -->    
       <sender>
         <!-- 0..1 编号 -->
         <identifier>
           <system value="http://fhir.scwjxx.cn/Sichuan/NamingSystem/medical-organization-identification"/>
           <value value="机构编号"/>
         </identifier>
         <display value="机构名称"/>
       </sender>
       <!-- 1..1 消息源应用程序 -->
       <source> 
         <!-- 0..1 系统名称（发送消息的系统） -->
            <name value="[string]"/>
            <!-- 0..1 软件名称（子系统名称） -->
            <software value="[string]"/>
            <!-- 0..1 运行的软件版本（当前版本） -->
            <version value="[string]"/>
            <!-- 1..1 ID地址(当前操作客户端IP地址) -->
            <endpoint value="[uri]"/>
       </source>

        <!--消息实际内容 0..* -->
        <focus>
          <!-- 0..1 Reference(Encounter) 关联住院信息（EncounterID） -->
          <reference value="Encounter/Encounter-example"/>
        </focus>
        <focus>
          <!-- 0..1 Reference(Invoice) 关联费用信息（InvoiceID） -->
          <reference value="Invoice/Invoice-example"/>
        </focus>
        <focus>
          <!-- 0..1 Reference(Claim) 关联保险报销信息（ClaimID） -->
          <reference value="Claim/Claim-example"/>
        </focus>
  </MessageHeader>
    </resource>
  </entry>

  <!--************************住院信息******************************-->
  <entry>
    <resource>
      <Encounter xmlns="http://hl7.org/fhir">
      <id value="Encounter-example"/>
        <meta>
          <profile value="http://fhir.scwjxx.cn/Sichuan/StructureDefinition/hospitalization-information"/>
        </meta>
        
      
    
        <!--住院号 -->
        <identifier>
          <system value="http://fhir.scwjxx.cn/Sichuan/NamingSystem/hospitalization-code" />
          <value value="10010" />
        </identifier>
    
        <!--固定值 -->
        <status value="finished"/>
    
        <!--医疗事件类别-->
        <class>
          <system value="http://fhir.scwjxx.cn/Sichuan/CodeSystem/medical-event-type-code"/>
          <code value="2"/>
          <!--    outpatient    -->
          <display value="住院"/>
        </class>


        <!--1..1  病人信息（用于EHR与基层HIS唯一性关联） -->
        <subject>
          <reference value="Patient/Patient001-example"/>
        </subject>



        <!--0..1  就诊机构信息 -->
        <serviceProvider>
          <!-- 0..1 编号 -->
          <identifier>
            <system value="http://fhir.scwjxx.cn/SiChuan/NamingSystem/medical-organization-identification"/>
            <value value="机构编号"/>
          </identifier>
          <display value="机构名称"/>
        </serviceProvider>
    
        <!--住院日期 -->
        <period>
          <start value="2019-02-10T13:00:00Z"/>
          <end value="2019-02-12T13:00:00Z"/>
        </period>
    
        <!--0..* 责任医护人员信息（可以包括主管医生、责任护士等） -->
        <participant>
          <!-- 0..* 医护人员类别 -->
          <type>
            <coding>
              <!-- 医护人员类型ValueSet  地址 -->
              <system value="http://fhir.scwjxx.cn/Sichuan/CodeSystem/medical-staff-type"/>
              <!-- 0..1 医护人员类型编码 -->
              <code value="1"/>
              <!-- 0..1 医护人员类型名称 -->
              <display value="主管医生"/>
            </coding>
          </type>
          <!-- 0..1 负责时间段 -->
          <period>
            <start value="2019-02-10T13:00:00Z"/>
            <end value="2019-02-12T13:00:00Z"/>           
          </period>         
          <individual>
            <!-- 0..1 编号 -->
            <identifier>
              <!--证件类型-->
              <type>
                <coding>
                  <!-- 证件类型ValueSet  地址 -->
                  <system value="http://fhir.scwjxx.cn/Sichuan/CodeSystem/certificate-category"/>
                  <!-- 0..1 证件类别编码 -->
                  <code value="1"/>
                  <!-- 0..1 证件类别名称 -->
                  <display value="身份证"/>
                </coding>
              </type>
              <system value="http://fhir.scwjxx.cn/Sichuan/NamingSystem/id-card"/>
              <value value="511002196509120322"/>
            </identifier>
            <display value="姓名"/>
          </individual>
        </participant>
    
        <!--0..* 诊断（包括入院、出院、中医等类型诊断） -->
        <diagnosis>
          <!-- 0..1诊断类型-->
          <use>
            <coding>
              <system value="http://fhir.scwjxx.cn/Sichuan/CodeSystem/diagnosis-type"/>
              <!--诊断类型编码 -->
              <code value="001"/>
              <!--诊断类型名称 -->
              <display value="入院诊断"/>
            </coding>          
          </use>
          <condition>
            <identifier>
              <system value="http://fhir.scwjxx.cn/Sichuan/CodeSystem/diagnosis-code"/>
              <value value="诊断编码"/>
            </identifier>
            <display value="诊断名称"/>
          </condition>
          <!-- 0..1 诊断权重 -->
          <rank value="1"/>
        </diagnosis>
      </Encounter>
      
    </resource>
  </entry>

   <!--************************费用信息******************************-->
  <entry>
    <resource>
       <id value="Invoice-example"/>
      <Invoice xmlns="http://hl7.org/fhir">
        <meta>
          <profile value="http://fhir.scwjxx.cn/Sichuan/StructureDefinition/fees-list"/>
        </meta>      
​        <!-- 1..1 状态 -->
​        <status value="balanced"/>
​        <!-- 0..1 总费用 -->
​        <totalGross>
​          <!-- 0..1 费用额 -->
​          <value value="150"/>
​        </totalGross>
​      </Invoice>
​    </resource>
  </entry>

 

  <!--************************保险报销信息******************************-->
  <entry>
    <resource>
      <Claim xmlns="http://hl7.org/fhir">
         <id value="Claim-example"/>
        <meta>
          <profile value="http://fhir.scwjxx.cn/Sichuan/StructureDefinition/medical-insurance-reimbursement"/>
        </meta>
        <status value="active"/>
        <type>
	 <coding>
              <system value="http://terminology.hl7.org/CodeSystem/claim-type"/>
              <!--保险编码 -->
              <code value="institutional"/>
              <!--保险名称 -->
              <display value="Institutional"/>
            </coding> 
        <type>
	
        <provider>
          <!-- 0..1 编号 -->
           <identifier>
             <system value="http://fhir.scwjxx.cn/Sichuan/NamingSystem/medical-organization-identification"/>
             <value value="机构编号"/>
           </identifier>
           <display value="机构名称"/>
         </receiver>
     
         <priority> 
  	<coding>
              <system value="http://terminology.hl7.org/CodeSystem/processpriority"/>
              <!--优先级编码 -->
              <code value="stat"/>
              <!--优先级名称 -->
              <display value="Immediate"/>
            </coding> 
         <priority>

​        <!-- 0..1 保险报销总额 -->
​        <total>
​          <!-- 0..1 费用额 -->
​          <value value="230"/>
​        </total>
​      </Claim>
  
</Bundle>










