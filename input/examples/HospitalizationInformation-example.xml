<?xml version="1.0" encoding="utf-8" ?>
<Bundle xmlns="http://hl7.org/fhir">
  <!--流水号（重发改变）-->
  <id value="HospitalizationInformation-example"/>
  <type value="message"/>
  <!--************************消息头****************************-->
  <entry>
    <resource>
      <MessageHeader xmlns="http://hl7.org/fhir">
       
         <!--1.1 消息ID（实例ID，重发不变）-->
        <id value="MessageID"/>
        <!--消息事件 1..1-->  
        <eventCoding>
          <!--事件的ValueSet地址-->
          <system value="http://fhir.scwjxx.cn/Sichuan/CodeSystem/bussiness-event-code"/>
          <!--事件版本 0..1-->
          <version value="V1.0"/>
          <!--事件代码 0..1 -->
          <code value="C09001"/>
          <!--事件名称 0..1 住院信息-->
          <display value="住院信息"/>
        </eventCoding>
         <!-- 0..* 消息目的地应用程序-->
        <destination> 
          <!-- 0..1 系统名称 -->
          <name value="[string]"/>
          <!-- 1..1 实际目的地址 -->
          <endpoint value="[url]"/>
          <!-- 0..1 接收单位 -->
         <receiver>
           <!-- 0..1 编号 -->
           <identifier>
             <system value="http://fhir.scwjxx.cn/Sichuan/NamingSystem/medical-organization-identification"/>
             <value value="机构编号"/>
           </identifier>
           <display value="机构名称"/>
         </receiver>
       </destination>       
        <!-- 0..1 发送单位 -->    
       <sender>
         <!-- 0..1 编号 -->
         <identifier>
           <system value="http://fhir.scwjxx.cn/Sichuan/NamingSystem/medical-organization-identification"/>
           <value value="机构编号"/>
         </identifier>
         <display value="机构名称"/>
       </sender>
       <!-- 1..1 消息源应用程序 -->
       <source> 
         <!-- 0..1 系统名称（发送消息的系统） -->
            <name value="[string]"/>
            <!-- 0..1 软件名称（子系统名称） -->
            <software value="[string]"/>
            <!-- 0..1 运行的软件版本（当前版本） -->
            <version value="[string]"/>
            <!-- 1..1 ID地址(当前操作客户端IP地址) -->
            <endpoint value="[uri]"/>
       </source>

        <!--消息实际内容 0..* -->
        <focus>
          <!-- 0..1 Reference(Encounter) 关联住院信息（EncounterID） -->
          <reference value="Encounter/Encounter-example"/>
        </focus>
        <focus>
          <!-- 0..1 Reference(Invoice) 关联费用信息（InvoiceID） -->
          <reference value="Invoice/Invoice-example"/>
        </focus>
        <focus>
          <!-- 0..1 Reference(Claim) 关联保险报销信息（ClaimID） -->
          <reference value="Claim/Claim-example"/>
        </focus>
  </MessageHeader>
    </resource>
  </entry>

 

 
</Bundle>










